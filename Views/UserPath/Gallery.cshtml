@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Gym</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    
    <!-- Hero Section -->
    <section class="bg-sky-600 text-white text-center py-6">
        <h1 class="text-4xl font-bold">Gym name...</h1>
        <div class="mt-4 flex justify-center items-center gap-4">
            <form asp-action="GetHomePage" asp-controller="Page" method="GET">
                <button type="submit" class="bg-white text-black py-2 px-4 rounded-full hover:bg-gray-200">Home</button>
            </form>
            <form asp-action="GetMembershipsPage" asp-controller="Page" method="GET">
                <button type="submit" class="bg-white text-black py-2 px-4 rounded-full hover:bg-gray-200">Memberships</button>
            </form>
            <form asp-action="GetTrainersPage" asp-controller="Page" method="GET">
                <button type="submit" class="bg-white text-black py-2 px-4 rounded-full hover:bg-gray-200">Trainers</button>
            </form>
            <form asp-action="GetGalleryPage" asp-controller="Page" method="GET">
                <button type="submit" class="bg-white text-black py-2 px-4 rounded-full hover:bg-gray-200">Gallery</button>
            </form>
            <div class="ml-16 flex justify-center items-center gap-4">
                <form asp-action="GetSignInPage" asp-controller="Page" method="GET">
                    <button type="submit" class="bg-white text-black py-2 px-4 rounded-full hover:bg-gray-200">Sign In</button>
                </form>
                <form asp-action="GetSignUpPage" asp-controller="Page" method="GET">
                    <button type="submit" class="bg-white text-black py-2 px-4 rounded-full hover:bg-gray-200">Sign Up</button>
                </form>
                <form asp-action="GetProfilePage" asp-controller="Page" method="GET">
                    <button type="submit" class="w-12 h-12 bg-white text-black text-xs p-2 rounded-full hover:bg-gray-200">Profile</button>
                </form>
            </div>
        </div>
    </section>
    
    <!-- Gallery Section -->
    <section class="container mx-auto my-12 px-6">
        <h2 class="text-3xl font-bold text-center mb-6">Gallery</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            <img src="/images/gym1.jpg" alt="Gym Photo 1" class="rounded-lg shadow-md w-full h-64 object-cover">
            <img src="/images/gym2.jpg" alt="Gym Photo 2" class="rounded-lg shadow-md w-full h-64 object-cover">
            <img src="/images/gym3.jpg" alt="Gym Photo 3" class="rounded-lg shadow-md w-full h-64 object-cover">
            <img src="/images/gym4.jpg" alt="Gym Photo 4" class="rounded-lg shadow-md w-full h-64 object-cover">
            <img src="/images/gym5.jpg" alt="Gym Photo 5" class="rounded-lg shadow-md w-full h-64 object-cover">
            <img src="/images/gym6.jpg" alt="Gym Photo 6" class="rounded-lg shadow-md w-full h-64 object-cover">
        </div>
    </section>
    
</body>
</html>