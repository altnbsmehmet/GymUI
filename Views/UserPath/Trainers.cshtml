@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model TrainersViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gym</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    

@await Html.PartialAsync("UserHero")
    
    <!-- Trainers -->
    <section class="bg-gray-100">
        <section class="container mx-auto px-6 py-12 flex flex-col justify-center items-center">
            <p class="text-xl font-bold text-[#00316E] mb-4">Trainers</p>
            <div id="trainers" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4 gap-8">
                @if(Model.Trainers != null) {
                    @foreach(var trainer in Model.Trainers) {
                        <div class="bg-white p-6 rounded-2xl shadow-md border
                        flex flex-col justify-center items-center gap-2">
                            <img src="@trainer.User.ProfilePhoto" class="w-24 h-24 rounded-full object-cover" />
                            <p class="text-lg font-semibold">@(trainer.User.FirstName) @(trainer.User.LastName)</p>
                            <p class="text-sm">@(trainer.AboutMe)</p>
                        </div>
                    }
                }
            </div>
        </section>        
    </section>


<script src="~/Scripts/SignInOrUp.js"></script>
</body>
</html>