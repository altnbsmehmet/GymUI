@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<section class="text-center py-3">
    <div class="flex justify-center items-center gap-4">
        <p class="text-[#D40D12] text-lg font-bold">Admin Panel</p>
        <form asp-action="GetAdminHomePage" asp-controller="Page" method="GET">
            <button type="submit" class="py-1 px-4 border-2 border-white rounded-full hover:border-[#00316E] text-[#00316E] text-lg font-bold">Home</button>
        </form>
        <form asp-action="GetAdminMembershipsPage" asp-controller="Page" method="GET">
            <button type="submit" class="py-1 px-4 border-2 border-white rounded-full hover:border-[#00316E] text-sm">Memberships</button>
        </form>
        <form asp-action="GetAdminEmployeesPage" asp-controller="Page" method="GET">
            <button type="submit" class="py-1 px-4 border-2 border-white rounded-full hover:border-[#00316E] text-sm">Employees</button>
        </form>
        <form asp-action="GetAdminGalleryPage" asp-controller="Page" method="GET">
            <button type="submit" class="py-1 px-4 border-2 border-white rounded-full hover:border-[#00316E] text-sm">Gallery</button>
        </form>
        <div class="ml-16 flex justify-center items-center gap-4">
            <form asp-action="GetAdminProfilePage" asp-controller="Page" method="GET">
                <button type="submit" class="w-12 h-12 text-xs p-2 border-2 border-white rounded-full 
                hover:border-[#00316E] flex justify-center items-center">Profile</button>
            </form>
        </div>
    </div>
</section>