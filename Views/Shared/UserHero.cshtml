@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<section class="text-center py-3">
    <div class="flex justify-center items-center gap-4">
        <form asp-action="GetHomePage" asp-controller="Page" method="GET">
            <button type="submit" 
            class="py-1 px-4 border-2 border-white rounded-full hover:border-[#00316E] 
            text-[#00316E] text-lg font-bold">Gym</button>
        </form>
        <form asp-action="GetMembershipsPage" asp-controller="Page" method="GET">
            <button type="submit" 
            class="py-1 px-4 border-2 border-white rounded-full hover:border-[#00316E] text-sm">Memberships</button>
        </form>
        <form asp-action="GetTrainersPage" asp-controller="Page" method="GET">
            <button type="submit" 
            class="py-1 px-4 border-2 border-white rounded-full hover:border-[#00316E] text-sm">Trainers</button>
        </form>
        <form asp-action="GetGalleryPage" asp-controller="Page" method="GET">
            <button type="submit" 
            class="py-1 px-4 border-2 border-white rounded-full hover:border-[#00316E] text-sm">Gallery</button>
        </form>
        <div class="ml-16 flex justify-center items-center gap-4">
            <form asp-action="GetSignInPage" asp-controller="Page" method="GET">
                <button type="submit" 
                class="py-1 px-4 border-2 border-white rounded-full hover:border-[#00316E] text-sm">Sign In</button>
            </form>
            <form asp-action="GetSignUpPage" asp-controller="Page" method="GET">
                <button type="submit" 
                class="py-1 px-4 border-2 border-white rounded-full hover:border-[#00316E] text-sm">Sign Up</button>
            </form>
            <form asp-action="GetProfilePage" asp-controller="Page" method="GET">
                <button type="submit" 
                class="w-12 h-12 text-xs p-2 border-2 border-white rounded-full hover:border-[#00316E] flex justify-center items-center">Profile</button>
            </form>
        </div>
    </div>
</section>